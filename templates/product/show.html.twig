{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td><img src="{{ asset('uploads/photos/' ~ product.photo) }}" alt="{{ product.name }}" width="100"></td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    <form action="{{ path('product_delete', {'id': product.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">delete</button>
    </form>

    <a href="{{ path('product_index') }}">back to list</a>
{% endblock %}